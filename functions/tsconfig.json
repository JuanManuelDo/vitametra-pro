{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "es2020",
    "outDir": "lib",
    "lib": ["es2020"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "rootDir": "src"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "../src/**/*",
    "../server.js"
  ]
}
